<div class="col-md-8 col-md-offset-2">
	<h2>Authorized Users</h2>
	
	<div class="panel panel-default">
		<div class="panel-body">
			<table class="table table-striped">
				<thead>
					<tr>
						<td>
							Name
						</td>
						<td>
							Email
						</td>
						<td>
							Status
						</td>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td>
							<%= image_tag(user.image.thumb_small.url) %> <%= user.first_name %> <%= user.last_name %>
						</td>
						<td>
							<%= user.email %>
						</td>
						<td>
							<%= user_auth_status(user) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
			
			<h3 class="extra-margin-top">Invite User</h3>
			
			<%= form_for(User.new, url: user_invitation_path, html: {class: 'form-inline' }) do |f| %>
				<%= f.email_field :email, placeholder: 'Email', label: false, class: 'form-control' %>
				<%= f.submit 'Invite User', class: 'btn btn-primary' %>
			<% end %>

			
		</div>
	</div>
</div>