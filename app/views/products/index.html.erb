<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Name</th>
      <th>Description</th>
      <th>Sku</th>
      <th>Code</th>
      <th>Image</th>
      <th>Cost</th>
      <th>Cost</th>
      <th>Weight</th>
      <th>Weight</th>
      <th>Weight unit</th>
      <th>Restock</th>
      <th>Category</th>
      <th>Supplier</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.account_id %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.sku %></td>
        <td><%= product.code %></td>
        <td><%= product.image %></td>
        <td><%= product.cost %></td>
        <td><%= product.cost %></td>
        <td><%= product.weight %></td>
        <td><%= product.weight %></td>
        <td><%= product.weight_unit %></td>
        <td><%= product.restock %></td>
        <td><%= product.category_id %></td>
        <td><%= product.supplier_id %></td>
        <td><%= product.brand_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

