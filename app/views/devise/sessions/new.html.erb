<div class="col-md-4 col-md-offset-4 well signin">
	<div><h2>Log in</h2></div>
	<br />
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="input-group">
  	  		<%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Email' %>
	  		<span class="input-group-addon"><span class="fa fa-user fa-lg"></span></span>
		</div>
		<br />
  		<div class="input-group">
    		<%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Password' %>
			<span class="input-group-addon"><span style="padding:0 1px 0 1px;" class="fa fa-lock fa-lg"></span></span>
		</div>
		<br />
  		  <% if devise_mapping.rememberable? -%>
    		<div class="text-brown">
				<%= f.check_box :remember_me %> 
				<%= f.label :remember_me %>
			</div>
  		  <% end -%>
		<br />
  		<div><%= f.submit "Log in", class: 'btn btn-primary btn-med' %></div>
	<% end %>
	<br />
	<div class="text-red">
		<%= render "devise/shared/links" %>
	</div>
	
</div>
